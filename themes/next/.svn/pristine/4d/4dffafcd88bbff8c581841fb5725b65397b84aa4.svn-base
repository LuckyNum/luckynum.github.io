.sidebar-toggle {
  position: fixed;
  box-sizing: border-box;
  top: $sidebar-toggle-top;
  width: $sidebar-toggle-width;
  height: $sidebar-toggle-height;
  padding: $sidebar-toggle-padding;
  background: $sidebar-toggle-bg-color;
  right: $b2t-position-right;
  bottom: 45px;
  line-height: 0;
  z-index: $zindex-5;
  cursor: pointer;
  -webkit-transform: translateZ(0);
  
  .sidebar-position-left  & {
    left: $sidebar-toggle-left;
  }
  .sidebar-position-right & {
    right: $sidebar-toggle-right;
  }
  
  +tablet() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}


.sidebar-toggle-line {
  position: relative;
  display: inline-block;
  margin-top: 3px;
  vertical-align: top;
  height: $sidebar-toggle-line-height;
  width: 100%;
  background: $sidebar-toggle-line-bg-color;

  &:first-child { margin-top: 0; }
    
  .page-post-detail & {
    background: $sidebar-toggle-line-active-bg-color;
  }
}
